#!/bin/bash

<% if @activate_virtualenv -%>
source <%= @_virtualenv %>/bin/activate
<% end -%>

export DJANGO_SETTINGS_MODULE=<%= @_settings_module %>

cd <%= @_srcdir %>

# Source and export environment variables for app
# if any.
#
if [ -r .env ]; then
  set -a
  source .env
  set +a
fi

exec <%= @command %>
